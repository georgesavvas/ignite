{
  "name": "ignite",
  "version": "0.0.1-alpha.19",
  "license": "Apache-2.0",
  "description": "Ignite VFX Pipeline",
  "author": "Georgios Savvas <hello@georgesavvas.co.uk>",
  "main": "public/main.js",
  "homepage": ".",
  "dependencies": {
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.5.0",
    "@mui/lab": "^5.0.0-alpha.72",
    "@mui/material": "^5.5.0",
    "@mui/x-data-grid": "^6.0.0",
    "@react-three/drei": "^9.46.1",
    "@react-three/fiber": "^8.0.10",
    "axios": "^1.2.0",
    "electron-updater": "^5.3.0",
    "framer-motion": "^10.8.5",
    "get-port": "^5",
    "lodash.debounce": "^4.0.8",
    "node-os-utils": "^1.3.7",
    "notistack": "^2.0.4",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-reflex": "^4.0.6",
    "react-sortablejs": "^6.1.4",
    "react-spring": "^9.5.2",
    "react-xarrows": "^2.0.2",
    "sockette": "^2.0.6",
    "string-to-color": "^2.2.2",
    "three": "^0.150.1",
    "tree-kill": "^1.2.2",
    "uuid4": "^2.0.3",
    "v8-compile-cache": "^2.3.0",
    "valtio": "^1.5.2",
    "web-vitals": "^3.1.0"
  },
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "sanitize": "npx kill-port 3000",
    "electron": "cross-env NODE_ENV=dev electron .",
    "electron-dev": "npm run sanitize && concurrently \"npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=dev electron .\"",
    "package": "npm run build && electron-builder",
    "release": "electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "electron": "^23.1.2",
    "electron-builder": "^23.6.0",
    "eslint": "^8.24.0",
    "eslint-plugin-react": "^7.31.8",
    "kill-port": "^2.0.1",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "georgesavvas.ignitevfx",
    "productName": "ignite",
    "artifactName": "${productName}-setup-${version}.${ext}",
    "generateUpdatesFilesForAllChannels": true,
    "afterSign": "scripts/notarize.js",
    "extraMetadata": {
      "main": "build/main.js"
    },
    "files": [
      "build/**/*"
    ],
    "extraFiles": [
      {
        "from": "../backend/dist/",
        "to": "."
      },
      {
        "from": "../config/",
        "to": "config"
      },
      {
        "from": "../tools/",
        "to": "tools"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "nsisWeb": {},
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "public/media/desktop_icon/linux/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "public/media/desktop_icon/win/icon.ico",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "icon": "public/media/desktop_icon/mac/icon.icns",
      "target": "dmg",
      "hardenedRuntime": true,
      "entitlements": "public/entitlements.mac.plist",
      "entitlementsInherit": "public/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "publish": [
        "github"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/georgesavvas/ignite.git"
  }
}
