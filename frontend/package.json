{
  "name": "ignite",
  "version": "0.0.1-alpha.19",
  "license": "Apache-2.0",
  "description": "Ignite VFX Pipeline",
  "author": "Georgios Savvas <hello@georgesavvas.co.uk>",
  "main": "./out/main/index.js",
  "homepage": ".",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.5.0",
    "@mui/lab": "^5.0.0-alpha.72",
    "@mui/material": "^5.5.0",
    "@mui/x-data-grid": "^6.0.0",
    "@mui/x-tree-view": "^6.17.0",
    "@react-three/drei": "^9.46.1",
    "@react-three/fiber": "^8.0.10",
    "@types/jest": "^29.5.0",
    "@types/uuid4": "^2.0.0",
    "axios": "^1.2.0",
    "electron-updater": "^6.1.1",
    "framer-motion": "^10.8.5",
    "get-port": "^5",
    "lodash": "^4.17.21",
    "node-os-utils": "^1.3.7",
    "notistack": "^3.0.1",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.10",
    "react-reflex": "^4.0.6",
    "react-sortablejs": "^6.1.4",
    "react-spring": "^9.5.2",
    "react-xarrows": "^2.0.2",
    "sockette": "^2.0.6",
    "string-to-color": "^2.2.2",
    "three": "^0.158.0",
    "tree-kill": "^1.2.2",
    "uuid4": "^2.0.3",
    "v8-compile-cache": "^2.3.0",
    "valtio": "^1.5.2",
    "web-vitals": "^3.1.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "2.2",
    "@testing-library/jest-dom": "^6.1",
    "@testing-library/react": "^14.0.0",
    "@types/lodash": "^4.14.194",
    "@types/node": "^20.4.4",
    "@types/react": "18.2",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-c8": "^0.33.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.4.0",
    "electron-vite": "^1.0.29",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.32.2",
    "jsdom": "^22.0.0",
    "kill-port": "^2.0.1",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "5.2",
    "vite": "^4",
    "vitest": "^0.34.6",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "georgesavvas.ignitevfx",
    "productName": "ignite",
    "artifactName": "${productName}-setup-${version}.${ext}",
    "generateUpdatesFilesForAllChannels": true,
    "afterSign": "scripts/notarize.js",
    "extraMetadata": {
      "main": "build/main.js"
    },
    "files": [
      "build/**/*"
    ],
    "extraFiles": [
      {
        "from": "../backend/dist/",
        "to": "."
      },
      {
        "from": "../config/",
        "to": "config"
      },
      {
        "from": "../tools/",
        "to": "tools"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "nsisWeb": {},
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "public/media/desktop_icon/linux/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "public/media/desktop_icon/win/icon.ico",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "icon": "public/media/desktop_icon/mac/icon.icns",
      "target": "dmg",
      "hardenedRuntime": true,
      "entitlements": "public/entitlements.mac.plist",
      "entitlementsInherit": "public/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "publish": [
        "github"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/georgesavvas/ignite.git"
  }
}
