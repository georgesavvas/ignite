{
  "name": "ignitefrontend",
  "version": "0.0.1",
  "license": "GPL-3.0-or-later",
  "description": "Client app for the Ignite VFX pipeline",
  "author": "George Savvas <ignite@georgesavvas.co.uk>",
  "main": "public/main.js",
  "homepage": ".",
  "dependencies": {
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.5.0",
    "@mui/lab": "^5.0.0-alpha.72",
    "@mui/material": "^5.5.0",
    "@mui/x-data-grid": "^5.15.2",
    "@react-three/drei": "^9.1.7",
    "@react-three/fiber": "^8.0.10",
    "axios": "^0.27.2",
    "get-port": "^5.1.1",
    "lodash.debounce": "^4.0.8",
    "notistack": "^2.0.4",
    "os-utils": "^0.0.14",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-reflex": "^4.0.6",
    "react-sortablejs": "^6.1.4",
    "react-spring": "^9.5.2",
    "react-xarrows": "^2.0.2",
    "string-to-color": "^2.2.2",
    "three": "^0.139.2",
    "uuid4": "^2.0.3",
    "v8-compile-cache": "^2.3.0",
    "valtio": "^1.5.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "sanitize": "npx kill-port 3000",
    "electron": "electron .",
    "electron-dev": "npm run sanitize && concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=dev electron .\"",
    "copy-backend-win": "xcopy ..\\backend\\dist\\Ignite* build /Y",
    "copy-backend-linux": "cp ../backend/dist/Ignite* build",
    "copy-dcc-win": "xcopy ..\\backend\\dist\\Ignite* build /Y",
    "copy-dcc-linux": "cp ../backend/dist/Ignite* build",
    "copy-common-win": "xcopy ..\\backend\\dist\\Ignite* build /Y",
    "copy-common-linux": "cp ../backend/dist/Ignite* build",
    "package-win": "npm run build && npm run copy-backend-win && electron-packager . --overwrite --icon=public/media/desktop_icon/win/icon.ico --prune=true --out=dist --version-string.CompanyName=GeorgeSavvas --version-string.FileDescription=IgniteClientDescription --version-string.ProductName=\"Ignite VFX Pipeline\"",
    "package-mac": "npm run build && electron-packager . --overwrite --icon=public/media/desktop_icon/mac/icon.icns --prune=true --out=dist && npm run copy-backend-linux",
    "package-linux": "npm run build && electron-packager . --overwrite --icon=public/media/desktop_icon/win/icon.png --prune=true --asar=true --out=dist && npm run copy-backend-linux"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "kill-port": "^2.0.1",
    "react-scripts": "^5.0.1",
    "wait-on": "^6.0.1"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ]
  }
}
