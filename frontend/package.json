{
  "name": "ignitefrontend",
  "version": "0.0.1",
  "license": "GPL-3.0-or-later",
  "description": "Client app for the Ignite VFX pipeline",
  "author": "George Savvas <ignite@georgesavvas.co.uk>",
  "main": "public/main.js",
  "homepage": ".",
  "dependencies": {
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.5.0",
    "@mui/lab": "^5.0.0-alpha.72",
    "@mui/material": "^5.5.0",
    "@react-three/drei": "^9.1.7",
    "@react-three/fiber": "^8.0.10",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "lodash.debounce": "^4.0.8",
    "notistack": "^2.0.4",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^18.2.0",
    "react-reflex": "^4.0.6",
    "react-xarrows": "^2.0.2",
    "three": "^0.139.2",
    "valtio": "^1.5.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "sanitize": "npx kill-port 3000",
    "electron-dev": "npm run sanitize && concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=dev electron .\"",
    "package-win": "electron-packager . --overwrite --icon=public/media/desktop_icon/win/ignite.ico --prune=true --out=dist --version-string.CompanyName=GeorgeSavvas --version-string.FileDescription=IgniteClientDescription --version-string.ProductName=\"Ignite VFX Pipeline\"",
    "package-mac": "electron-packager . --overwrite --icon=public/media/desktop_icon/mac/ignite.icns --prune=true --out=dist",
    "package-linux": "electron-packager . --overwrite --icon=public/media/desktop_icon/win/ignite.png --prune=true --asar=true --out=dist"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^6.0.1",
    "kill-port": "^2.0.1"
  }
}
